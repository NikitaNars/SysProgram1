<Window x:Class="SysProgram1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SysProgram1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        <StackPanel>
            <TextBlock x:Name="threadInfo"></TextBlock>
            <TextBlock x:Name="statusText"></TextBlock>
            <TextBlock x:Name="errorText"></TextBlock>
        </StackPanel>
        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button  Click="StartNotepad" Margin="10">Запуск Notepad</Button>
            <Button Click="Update" Margin="10">Обнавление</Button>
        </StackPanel>
        
        
    </Grid>
</Window>
